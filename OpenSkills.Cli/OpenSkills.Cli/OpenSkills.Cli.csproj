<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Version>1.3.0</Version>
    <Authors>OpenSkills Contributors</Authors>
    <Description>Universal skills loader for AI coding agents - install and load Anthropic SKILL.md format skills in any agent</Description>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <!-- CLI Framework -->
    
    <!-- Interactive prompts and colored output -->
    <PackageReference Include="Spectre.Console" Version="0.54.0" />
    
    <!-- YAML parsing -->
    <PackageReference Include="YamlDotNet" Version="16.3.0" />
  </ItemGroup>

</Project>
